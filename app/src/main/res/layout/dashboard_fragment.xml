<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/scrollable"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dashrealative">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:id="@+id/linearlayout">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:id="@+id/dashannoucement"
                    android:layout_weight="0.5"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:id="@+id/dashannouce"
                            android:src="@drawable/annoucement"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dashannouce"
                            android:layout_marginTop="10dp"
                            android:text="Annoucement"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"

                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <View

                    android:layout_width="1dp"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="5dp"
                    android:background="@android:color/darker_gray" />


                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:id="@+id/Dashevent"
                    android:layout_weight="0.5"
                    >



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/dashevent"
                            android:src="@drawable/event"
                            android:layout_margin="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dashevent"

                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="Events"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"

                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:id="@+id/horline"
                android:layout_below="@+id/linearlayout"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_below="@id/horline"
                android:id="@+id/linearlayout2">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"

                    android:layout_weight="0.5"
                    android:id="@+id/DashPayment">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:id="@+id/dashpayment"
                            android:src="@drawable/payment"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dashpayment"
                            android:layout_marginTop="10dp"
                            android:text="Payment"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"

                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <View

                    android:layout_width="1dp"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="5dp"
                    android:background="@android:color/darker_gray" />

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"

                    android:layout_weight="0.5"
                    android:id="@+id/Complaint">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/dashcomplaint"
                            android:src="@drawable/download"
                            android:layout_margin="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dashcomplaint"

                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="Complaints"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"

                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_below="@id/linearlayout2"
                android:id="@+id/linearlayout3">

                <android.support.v7.widget.CardView
                    android:id="@+id/Firealarm"
                    android:layout_width="0dp"

                    android:layout_height="150dp"
                    android:layout_weight="0.5">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/dashfirealarm"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:src="@drawable/firealarm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dashfirealarm"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="Fire Alarm"
                            android:textAlignment="center"
                            android:textSize="22sp"
                            android:textStyle="bold"

                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <View

                    android:layout_width="1dp"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="5dp"
                    android:background="@android:color/darker_gray" />

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"

                    android:layout_weight="0.5"
                    android:id="@+id/Intruder">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/dashintruder"
                            android:src="@drawable/intruder"
                            android:layout_margin="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dashintruder"

                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="Intruder"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"

                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linearlayout2"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_below="@id/linearlayout3"
                android:id="@+id/linearlayout4">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"

                    android:layout_weight="0.5"
                    android:id="@+id/Emergency">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/dashemergency"
                            android:src="@drawable/emergency"
                            android:layout_margin="5dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dashemergency"

                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="Emergency"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"

                            />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <View

                    android:layout_width="1dp"
                    android:layout_height="match_parent"

                    android:layout_marginBottom="5dp"
                    android:background="@android:color/darker_gray" />

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"

                    android:layout_weight="0.5"
                    android:id="@+id/DashAdminPanel">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:id="@+id/Dashadmin"
                            android:src="@drawable/admin"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Dashadmin"
                            android:layout_marginTop="10dp"
                            android:text="Secretary Panel"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"

                            />
                    </RelativeLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linearlayout4"
                android:background="@android:color/darker_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_below="@+id/linearlayout3"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_below="@id/linearlayout4"
                android:id="@+id/linearlayout5"
                android:visibility="gone">





                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"

                    android:layout_weight="0.5"
                    android:onClick="distresscall">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:id="@+id/dashdistress"
                            android:src="@drawable/emergency_call"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dashdistress"
                            android:layout_marginTop="10dp"
                            android:text="Distress Call"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"

                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>